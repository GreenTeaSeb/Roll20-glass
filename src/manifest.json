{

    "manifest_version": 2,
    "name": "roll20 glass theme",
    "version": "1.1.0",
  
    "description": "roll20 theme",
  

    "background":{
        "scripts":[
            "./browser-polyfill.js"
        ]
    },

    "content_scripts": [
        {
            "matches": ["*://app.roll20.net/editor/*"],
            "js": ["./browser-polyfill.js","./main.js"],
            "css": ["./css/main.css"]
           
        }
    ],
    "icons":{
        "48": "icon.svg",
         "96": "icon.svg"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Roll20 Glass"
      }
  }